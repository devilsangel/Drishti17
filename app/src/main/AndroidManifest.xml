<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drishti.drishti17">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />

    <uses-permission android:name="android.permission.CAMERA" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Drishti"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="com.drishti.drishti17.util.db" />
        <meta-data
            android:name="VERSION"
            android:value="11" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.drishti.drishti17.util.db" />

        <activity
            android:name=".ui.Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".ui.QRactivity" />
        <activity
            android:name=".ui.Home"
            android:label="@string/app_name"
            android:theme="@style/Home" />
        <activity
            android:name=".ui.TempHome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Navigation" />
        <activity
            android:name=".ui.Departments"
            android:label="@string/title_activity_events"
            android:theme="@style/Events" />
        <activity
            android:name=".ui.Schedule"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Expo"
            android:label="@string/title_activity_expo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.EventDetail"
            android:label="@string/title_activity_event_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Profile"
            android:label="Prof"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.EventList"
            android:label="@string/title_activity_event_list"
            android:theme="@style/Home" />

        <service
            android:name=".async.services.EventsSyncService"
            android:exported="false" />

        <activity
            android:name=".ui.MainRegister"
            android:label="Registration"
            android:theme="@style/Registration" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".ui.Cetalks"
            android:label="@string/title_activity_cetalks"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.EventPage"
            android:label="@string/title_activity_event_page"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".async.services.RadioService"/>

    </application>

</manifest>