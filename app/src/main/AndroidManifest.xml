<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drishti.drishti17">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Drishti"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ui.Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.QRactivity" />
        <activity
            android:name=".ui.Home"
            android:label="@string/app_name"
            android:theme="@style/Home"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.TempHome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Navigation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.Departments"
            android:label="@string/title_activity_events"
            android:theme="@style/Events"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.Schedule"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.Expo"
            android:label="@string/title_activity_expo"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.Profile"
            android:label="Prof"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.EventList"
            android:label="@string/title_activity_event_list"
            android:theme="@style/Home"
            android:screenOrientation="portrait"/>

        <service
            android:name=".async.services.EventsSyncService"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <service
            android:name=".async.services.HighlightSyncService"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.MainRegister"
            android:label="Registration"
            android:theme="@style/Registration"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.Cetalks"
            android:label="@string/title_activity_cetalks"
            android:theme="@style/Home"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.EventPage"
            android:label="@string/title_activity_event_page"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <service android:name=".async.services.RadioService" />
        <service android:name=".async.services.FCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.DevActivity"
            android:label="@string/title_activity_dev"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <provider
            android:name=".db.DbContentProvider"
            android:authorities="com.drishti.drishti17.dbprovider"
            android:exported="false" />

        <activity
            android:name=".ui.SponsorActivity"
            android:label="@string/title_activity_sponsor"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.EventRegister"
            android:label="Add Group Members"
            android:theme="@style/Registration.NoActionBAr"
            android:screenOrientation="portrait"/>
    </application>

</manifest>