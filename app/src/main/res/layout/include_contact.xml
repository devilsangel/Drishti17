<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:src="@drawable/icon_man"
        android:visibility="gone" />

    <com.drishti.drishti17.ui.factory.SourceSansTextView
        android:id="@+id/name"
        style="@style/event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_name"
        android:layout_alignTop="@id/icon_name"
        android:layout_toRightOf="@id/icon_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="visible" />

    <include
        android:id="@+id/contact"
        layout="@layout/include_event_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_name" />

