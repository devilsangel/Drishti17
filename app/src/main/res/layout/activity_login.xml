<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.drishti.drishti17.ui.Login">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullscreen_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <!--android:orientation="vertical"-->
            <!--tools:ignore="UselessParent">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fb_button_bg"
                android:background="#4867aa"
                android:alpha="0.6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:animateLayoutChanges="true">

                <Button
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:id="@+id/fb_button"
                    android:text="@string/Logina"
                    android:drawableLeft="@drawable/fb"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fb_button_bg"
                android:id="@+id/g_button_bg"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:alpha="0.6"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/g_button"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/g"
                    android:text="@string/Loginb"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>



        </RelativeLayout>


    </FrameLayout>

</FrameLayout>
