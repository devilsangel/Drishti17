<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_nav"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        android:background="@color/colorPrimary_nav"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/competitions_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:id="@+id/competition_pic"
            android:src="@drawable/ic_profile" />

        <com.drishti.drishti17.ui.factory.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/competition"
            android:text="@string/competitions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workshops_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:id="@+id/workshop_pic"
            android:src="@drawable/ic_feed" />

        <com.drishti.drishti17.ui.factory.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/workshop"
            android:text="@string/workshops" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/informals_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:id="@+id/informal_pic"
            android:src="@drawable/ic_activity" />

        <com.drishti.drishti17.ui.factory.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/informal"
            android:text="@string/informals" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />


</LinearLayout>